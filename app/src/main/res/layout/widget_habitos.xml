<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_semi_transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meus Hábitos"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/btnNovoHabito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Novo Hábito"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/habito_slot_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/habito_slot_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/habito_icon_1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    tools:src="@drawable/ic_habits"/>
                <TextView
                    android:id="@+id/habito_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    tools:text="Hábito 1"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/habito_slot_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@id/habito_slot_1"
            app:layout_constraintEnd_toStartOf="@id/habito_slot_3"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/habito_icon_2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    tools:src="@drawable/ic_habits"/>
                <TextView
                    android:id="@+id/habito_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    tools:text="Hábito Favorito 2"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/habito_slot_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="4dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@id/habito_slot_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/habito_icon_3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    tools:src="@drawable/ic_habits"/>
                <TextView
                    android:id="@+id/habito_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    tools:text="Hábito Super Longo 3"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_empty_habits_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⭐ Favorite um hábito para vê-lo aqui!"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:paddingTop="16dp"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>