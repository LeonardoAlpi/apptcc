<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatgpt_image_22_de_abr__de_2025_14_02_10"
    tools:context=".ProgressoPeso">

    <ImageButton
        android:id="@+id/btn_voltar_imc"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progresso_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Meu Progresso Físico"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btn_voltar_imc"
        app:layout_constraintBottom_toBottomOf="@id/btn_voltar_imc"
        app:layout_constraintStart_toEndOf="@id/btn_voltar_imc"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"/> <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/progresso_title"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_peso_atual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Seu peso atual: 75 kg" />

        <TextView
            android:id="@+id/text_altura_atual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Sua altura: 1.75 m"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btn_calcular_imc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizar IMC"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/card_resultado_imc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_semi_transparent"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seu IMC Atual"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_resultado_imc_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                tools:text="23.1" />
            <TextView
                android:id="@+id/text_resultado_imc_classificacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Peso Normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_semi_transparent"
            android:padding="16dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evolução do Peso (kg)"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.example.meuappfirebase.SimpleLineChart
                android:id="@+id/weight_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Registrar Novo Peso"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>